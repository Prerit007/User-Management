<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.lordicon.com/xdjxvujz.js"></script>
  </head>
  <body>
    {{#if re}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        User Has Been Removed Successfully
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}

    <div class="row">
      <div class="col-6 justify-self-center"><h1>Users</h1></div>
    </div>

    <table class="table table-hover table-bordered">
      <thead class="thead-dark">
        <tr style="text-align: center;font-size: 18px;vertical-align: middle;">
          <th scope="col"><lord-icon
              src="https://cdn.lordicon.com/ajkxzzfb.json"
              trigger="loop-on-hover"
              colors="primary:#ffc738,secondary:#4bb3fd"
              scale="65"
              state="hover-looking-around"
              style="width:34px;height:34px"
            >
            </lord-icon></th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email Address</th>
          <th scope="col">Phone</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each rows}}
          <tr
            style="text-align: center;font-size: 18px;vertical-align: middle;"
          >
            <th scope="row">{{this.id}}</th>
            <td>{{this.fname}}</td>
            <td>{{this.lname}}</td>
            <td>{{this.emial}}</td>
            <td>{{this.phone}}</td>
            <td>

              <a
                href="/view/{{this.id}}"
                type="button"
                class="btn btn-primary btn-lg"
                data-bs-toggle="tooltip"
                data-bs-placement="left"
                title="View"
              ><lord-icon
                  src="https://cdn.lordicon.com/hbvgknxo.json"
                  trigger="loop-on-hover"
                  colors="primary:#231e2d,secondary:#4bb3fd,tertiary:#ebe6ef"
                  scale="75"
                  style="width:30px;height:27px"
                >
                </lord-icon>
              </a>
              <a
                href="/edit/{{this.id}}"
                type="button"
                class="btn btn-success btn-lg"
                data-bs-toggle="tooltip"
                data-bs-placement="top"
                title="Edit"
              ><lord-icon
                  src="https://cdn.lordicon.com/alzqexpi.json"
                  trigger="loop-on-hover"
                  colors="primary:#121331,secondary:#646e78,tertiary:#ffc738,quaternary:#f9c9c0,quinary:#ebe6ef"
                  scale="75"
                  state="hover-1"
                  style="width:30px;height:27px"
                >
                </lord-icon>
              </a>
              <a
                href="/{{this.id}}"
                type="button"
                class="btn btn-outline-danger btn-lg"
                data-bs-toggle="tooltip"
                data-bs-placement="right"
                title="Delete"
              >
                <lord-icon
                  src="https://cdn.lordicon.com/exkbusmy.json"
                  trigger="loop-on-hover"
                  colors="outline:#121331,primary:#646e78,secondary:#4bb3fd,tertiary:#ebe6ef"
                  scale="59"
                  state="morph-trash-in"
                  style="width:30px;height:27px"
                >
                </lord-icon>

              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <script>
      var tooltipTriggerList =
      [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]')) var
      tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) { return
      new bootstrap.Tooltip(tooltipTriggerEl) })
    </script>
  </body>
</html>